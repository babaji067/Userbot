{
  "name": "autosender-bot",
  "description": "A public Telegram bot for auto-sending messages",
  "repository": "https://github.com/yourusername/autosender-bot",
  "env": {
    "BOT_TOKEN": {
      "description": "Telegram bot token from @BotFather",
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
