{
  "name": "Telegram UserBot",
  "description": "UserBot that sends auto messages using session login.",
  "repository": "https://github.com/yourusername/userbot-heroku",
  "env": {
    "API_ID": {
      "description": "Telegram API ID from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API Hash from https://my.telegram.org",
      "required": true
    },
    "BOT_TOKEN": {
      "description": "Your Telegram Bot Token from @BotFather",
      "required": true
    },
    "OWNER_ID": {
      "description": "Your Telegram User ID (who controls the bot)",
      "required": true
    }
  },
  "buildpacks": [
    { "url": "heroku/python" }
  ]
}
