{
  "name": "telegram-userbot-auto",
  "description": "Auto-message sender via personal Telegram account",
  "repository": "https://github.com/yourusername/telegram-userbot-auto",
  "env": {
    "API_ID": {
      "description": "Telegram API ID from https://my.telegram.org",
      "required": true
    },
    "API_HASH": {
      "description": "Telegram API HASH from https://my.telegram.org",
      "required": true
    },
    "SESSION_STRING": {
      "description": "Generated Telethon session string",
      "required": true
    },
    "CONTROL_GROUP_ID": {
      "description": "Your private control group ID to manage the bot",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
